{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    { "labels": ["📦 deps", "🤖 bot"], "matchPackagePatterns": ["*"] },
    {
      "labels": ["⚠️ major", "📦 deps", "🤖 bot"],
      "matchUpdateTypes": ["major"]
    }
  ],
  "rangeStrategy": "pin",
  "prConcurrentLimit": 5
}
